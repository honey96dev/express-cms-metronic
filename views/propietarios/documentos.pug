extends ./layout

block mainContent
    .row
        .col-12
            .kt-portlet.kt-portlet--height-fluid.kt-portlet--height-fluid-transparent
                .kt-portlet__head
                    .kt-portlet__head-label
                        span.kt-portlet__head-icon
                            i.margin-auto.la.la-balance-scale
                        h3.kt-portlet__head-title=title

    #documentosList

    #documentoDetailsModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='documentoDetailsModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title(style='margin-top: 0') Nuevo documento
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                form#documentoDetailsForm.modal-body(action='/documentos/save', data-method='', novalidate='novalidate')
                    input#documentId.form-control(type='hidden', name='documentId')
                    //.modal-body
                    .form-group.document-details
                        label Nombre
                        input#name.form-control(type='text', name='name')
                    .form-group.document-details
                        label Descripci√≥n
                        textarea#description.form-control(type='text', name='description', rows='10')
                    .form-group.document-details
                        label URL
                        input#url.form-control(type='text', name='url')
                .modal-footer
                    button#closeModal.btn.btn-primary.btn-elevate.btn-pill(type='button', name='closeModal', data-dismiss='modal', style='background: #AEAAAA; padding: 8.45px 2.3rem; border-color: #AEAAAA;') Cancel
                    button#saveDocument.btn.btn-primary.btn-elevate.btn-pill(type='button', name='saveDocument', style='background: #FF5722; padding: 8.45px 2.3rem;border-color: #FF5722;') Save
